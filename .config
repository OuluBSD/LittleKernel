# LittleKernel Configuration

# Target Architecture Selection
# Note: Only one should be enabled at a time for a build
CONFIG_TARGET_X86=y
# CONFIG_TARGET_AMIGA_500PLUS is not set
# CONFIG_TARGET_8088_PC_CLONE is not set
# CONFIG_TARGET_286_TOSHIBA_T3200 is not set
# CONFIG_TARGET_PPC_G4 is not set
# CONFIG_TARGET_AMD64 is not set
# CONFIG_TARGET_PPC64_G5 is not set

# Enable x86 specific features
CONFIG_X86=y
CONFIG_X86_64=n

# Enable PowerPC specific features
CONFIG_PPC=n
CONFIG_PPC_64=n

# Enable serial console output
CONFIG_SERIAL_CONSOLE=y

# Enable VGA console output (for PC-compatible systems)
CONFIG_VGA_CONSOLE=y

# Enable Amiga-specific console output
CONFIG_AMIGA_CONSOLE=n

# Enable kernel debugging features
CONFIG_KERNEL_DEBUG=y

# Enable verbose logging
CONFIG_VERBOSE_LOG=n

# Enable runtime configuration changes
CONFIG_RUNTIME_CONFIG=y

# Enable hardware abstraction layer
CONFIG_HAL=y

# Enable profiling infrastructure
CONFIG_PROFILING=n

# Enable module loading system
CONFIG_MODULES=y

# Enable PCI support (x86/PCI systems)
CONFIG_PCI=y

# Enable Amiga AutoConfig support
CONFIG_AUTOCONFIG=n

# Enable networking support
CONFIG_NETWORKING=n

# Memory management options
CONFIG_MMU=y
CONFIG_PAGING=y

# Process management options
CONFIG_PROCESS_MGMT=y
CONFIG_THREAD_MGMT=n

# File system options
CONFIG_VFS=y
CONFIG_FAT32=y

# Timer configuration
CONFIG_TIMER_HZ=100

# Maximum number of processes
CONFIG_MAX_PROCESSES=128

# Kernel heap size in MB
CONFIG_KERNEL_HEAP_SIZE=16

# Enable early memory management
CONFIG_EARLY_MEM=y

# Enable hardware diagnostics
CONFIG_HW_DIAGNOSTICS=y

# Enable error handling framework
CONFIG_ERROR_HANDLING=y